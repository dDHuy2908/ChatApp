<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/layout_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/space_nav" />

        <com.luseen.spacenavigation.SpaceNavigationView
            android:id="@+id/space_nav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:active_item_color="@color/colorAccent"
            app:centre_button_color="@color/colorAccent"
            app:centre_button_icon="@drawable/ic_add"
            app:inactive_item_color="#fff"
            app:space_background_color="#CACACA"
            app:space_item_icon_only_size="28dp" />

    </RelativeLayout>
</layout>